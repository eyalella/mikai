{% if settings.show_slider_trending %}
{% if settings.show_slider_trending_collection == blank %}
<p style="margin-bottom: 30px;" class="container">Please select a collection in Theme Setting to display the products (Home Page section -> Home Page Trending Now Slider)</p>
{% else %}
<section class="widget-trending-product container">
  <div class="widget-title wow fadeIn">   
	<fieldset class="box-title">
      <legend align="center">{% comment %}{% if settings.slider_trending_title != blank %}
    	{{ settings.slider_trending_title }}
    	{% endif %}{% endcomment %}
      פריטים מומלצים
      </legend>
    </fieldset>
  </div>
  <div class="widget-product">
  {% comment %}
    Use class grid-uniform to have evenly sized columns clear
    each other properly at each breakpoint.
  {% endcomment %}
      <div class="products-grid owl-carousel">
        {% comment %}
          Loop through products in your Frontpage collection.
          This collection is created by default, but you must add products to it.
        {% endcomment %}
	  	{% for product in collections.[settings.show_slider_trending_collection].products %}
        	{% include 'product-grid-item-trending' %}	  
        {% endfor %}
     </div> 
  </div>
</section>

<script>
jQuery(document).ready(function() {
  jQuery('.widget-trending-product .products-grid').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 4,
    rtl: true,
    dots: false,
    autoplay: true,
    autoplaySpeed: 5000,
    responsive: [
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
});
</script>
{% endif %}
{% endif %}