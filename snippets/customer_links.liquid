{% if shop.customer_accounts_enabled %}
{% if customer %}
<ul class="customer-links">
  {% if settings.enable_wishlist %}
  <li class="wishlist">
    <span class="icon">&nbsp;</span>
    <a href="/pages/wish-list" title="המועדפים שלי">המועדפים שלי</a>
  </li>
  {% endif %}
  <li>
    {{ 'יציאה' | customer_logout_link }}
    <span class="or">|</span>
    <a href="/account"> החשבון שלי</a>
  </li>
</ul>
{% else %}
<ul class="customer-links">
  {% if settings.enable_wishlist %}
  <li class="wishlist">
    <span class="icon">&nbsp;</span>
    <a href="/pages/wish-list" title="המועדפים שלי">המועדפים שלי</a>
  </li>
  {% endif %}
  <li>
    {{ 'כניסה לחשבון' | customer_login_link }}
    {% if shop.customer_accounts_optional %}
    <span class="or">|</span>
    {{ 'הרשמה' | customer_register_link }}
    {% endif %}
  </li>
</ul>
{% endif %}
{% endif %}